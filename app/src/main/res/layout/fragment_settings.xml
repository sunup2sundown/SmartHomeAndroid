<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/text_houseid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="@color/colorBackground"
    android:backgroundTint="@color/colorBackground"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:id="@+id/text_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

    <Button
        android:id="@+id/button_changeusername"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginTop="10dp"
        android:text="Change Username"
        android:layout_below="@+id/text_username"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_changepw"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignStart="@+id/button_changeusername"
        android:layout_below="@+id/button_changeusername"
        android:text="Change Password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Houses:"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:id="@+id/textView7"
        android:layout_below="@+id/button_changepw"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/listView"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_newhouse"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_below="@+id/listView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="Add New House" />

    <Button
        android:id="@+id/button_joinhouse"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_below="@+id/button_newhouse"
        android:layout_centerHorizontal="true"
        android:text="Join Existing House" />

</RelativeLayout>