<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/button_add_peripheral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_marginTop="28dp"
        android:text="Add\nPeripheral"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_remove_peripheral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove\nPeripheral"
        android:layout_marginStart="44dp"
        android:layout_alignBaseline="@+id/button_add_peripheral"
        android:layout_alignBottom="@+id/button_add_peripheral"
        android:layout_toEndOf="@+id/button_add_peripheral" />

    <Button
        android:id="@+id/button_add_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Add\nBoard"
        android:layout_below="@+id/button_add_peripheral"
        android:layout_toStartOf="@+id/button_remove_peripheral" />

    <Button
        android:id="@+id/button_remove_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove\nBoard"
        android:layout_alignBaseline="@+id/button_add_board"
        android:layout_alignBottom="@+id/button_add_board"
        android:layout_alignStart="@+id/button_remove_peripheral" />

</RelativeLayout>