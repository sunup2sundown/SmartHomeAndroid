<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:text="System Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:id="@+id/tv_username"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_add_peripheral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="124dp"
        android:text="Add\nPeripheral"
        android:layout_below="@+id/tv_username"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_remove_peripheral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove\nPeripheral"
        android:layout_alignBaseline="@+id/button_add_peripheral"
        android:layout_alignBottom="@+id/button_add_peripheral"
        android:layout_toEndOf="@+id/button_add_peripheral"
        android:layout_marginStart="55dp" />

    <Button
        android:id="@+id/button_add_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="Add\nBoard"
        android:layout_below="@+id/button_add_peripheral"
        android:layout_alignEnd="@+id/button_add_peripheral" />

    <Button
        android:id="@+id/button_remove_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_add_board"
        android:layout_alignStart="@+id/button_remove_peripheral"
        android:text="Remove\nBoard" />

</RelativeLayout>