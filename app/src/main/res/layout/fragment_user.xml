<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@android:color/background_light"
    android:id="@+id/text_houseid">

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:id="@+id/text_username"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="House ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/text_username"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Change Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_changepw"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="New House"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:id="@+id/button_newhouse"
        android:layout_below="@+id/button_changepw"
        android:layout_marginTop="33dp"
        android:layout_toStartOf="@+id/textView6" />

    <Button
        android:id="@+id/button_switchhouse"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button_changepw"
        android:layout_marginTop="33dp"
        android:layout_toEndOf="@+id/textView6"
        android:text="Join House" />

    <TextView
        android:text="Current House:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_above="@+id/button_changepw"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp" />

    <ListView
        android:id="@+id/listview_houses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button_newhouse"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />


</RelativeLayout>